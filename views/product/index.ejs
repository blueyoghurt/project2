<div class="container">

<div style="overflow-x:auto;">
<table>
  <tr>
    <th></th>
    <th>Picture</th>
    <th>Name</th>
    <th>Category</th>
    <th>Cost</th>
    <th>RRP</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
  </tr>
  <%  products.forEach(function(product){ %>
  <tr>
    <td><input class="form-check-input" type="checkbox" value=""></td>
    <td><img src="http://res.cloudinary.com/blueyoghurt/image/upload/w_180,c_lfill,ar_1.5/<%= product.picture %>" width="150px"</td>
    <td><a href="/product/<%= product.upc %>/list"><%= product.name %></a></td>
    <td><%= product.category %></td>
    <td><%= product.cost %></td>
    <td><%= product.sellingPrice %></td>
    <td><%= product.quantity %></td>
    <td><a href="/product/<%= product.upc %>/edit" class="btn btn-info glyphicon glyphicon-edit"></a></td>
    <td><a href="" class="btn btn-danger glyphicon glyphicon-trash delete-btn" value="<%= product.upc %>"></td>
  </tr>
  <% }); %>
</table>
</div>
</div>
  <script src="/updateProduct.js"></script>
