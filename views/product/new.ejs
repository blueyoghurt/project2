<div class="container">
    <div class="col-sm-2" display="inline-block">
    </div>
      <div class="col-sm-10" display="inline-block">
        <h1>Add product</h1><br>
      </div>


  <form action="/product/new" method="post" enctype="multipart/form-data">
    <div class="form-group row">
      <label for="upc" class="col-sm-2">Unique Product Code</label>
      <div class="col-sm-10"><input id="upc" class="form-control" type="text" name="upc" placeholder="Unique Product Code" required></div>
    </div>

    <div class="form-group row">
      <label for="name" class="col-sm-2">Product name</label>
      <div class="col-sm-10"><input id="name" class="form-control" type="text" name="name" placeholder="Product Name" required></div>
    </div>

    <div class="form-group row">
      <label for="category" class="col-sm-2">Category</label>
      <div class="col-sm-10"><select class="form-control" name="category" required>
        <option value="" disabled selected>Please select</option>
        <option value="CategoryA" id="CategoryA" >Category A</option>
        <option value="CategoryB" id="CategoryB">Category B</option>
        <option value="CategoryC" id="CategoryC">Category C</option>
        <option value="CategoryD" id="CategoryD">Category D</option>
        <option value="CategoryE" id="newOption">Add New</option>
      </select></div>
    </div>

    <div class="form-group row">
      <label for="costPrice" class="col-sm-2">Cost Price (SGD)</label>
      <div class="col-sm-10"><input id="costPrice"  step="0.01" class="form-control" type="number" name="costPrice" placeholder="Cost Price (SGD)" required></div>
    </div>

    <div class="form-group row">
      <label for="sellingPrice" class="col-sm-2">Selling Price (SGD)</label>
      <div class="col-sm-10"><input id="sellingPrice" step="0.01" class="form-control" type="number" name="sellingPrice" placeholder="Selling Price (SGD)"></div>
    </div>

    <div class="form-group row">
      <label for="quantity" class="col-sm-2">Quantity</label>
      <div class="col-sm-10"><input id="quantity" class="form-control" type="number" name="quantity" placeholder="Quantity"></div>
    </div>

    <div class="form-group row">
      <label for="picture" class="col-sm-2">Picture</label>
      <div class="col-sm-10"><input id="picture" class="form-control" type="file" name="picture" placeholder="Picture"></div>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
  </form>

</div>

<script src="/form.js" type="text/javascript">  </script>
<script type="text/javascript" src="../js/thirdpartyjs/jquery.ui.widget.js"></script>
<script type="text/javascript" src="../js/thirdpartyjs/jquery.fileupload.js"></script>
<script type="text/javascript" src="../js/thirdpartyjs/jquery.cloudinary.js"></script>
