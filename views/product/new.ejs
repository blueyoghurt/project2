<div class="container">
  <h1>Add product</h1>

  <form action="/product/new" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="upc">Unique Product Code</label>
      <input id="upc" class="form-control" type="text" name="upc" required>
    </div>

    <div class="form-group">
      <label for="name">Product name</label>
      <input id="name" class="form-control" type="text" name="name" required>
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      <select class="form-control" name="category" required>
        <option value="" disabled selected>Please select</option>
        <option value="Category A">Category A</option>
        <option value="Category B">Category B</option>
        <option value="Category C">Category C</option>
        <option value="Category D">Category D</option>
        <option value="Category E" id="newOption">Add New</option>
      </select>
    </div>

    <div class="form-group">
      <label for="costPrice">Cost Price (SGD)</label>
      <input id="costPrice"  step="0.01" class="form-control" type="number" name="costPrice" required>
    </div>

    <div class="form-group">
      <label for="sellingPrice">Selling Price (SGD)</label>
      <input id="sellingPrice" step="0.01" class="form-control" type="number" name="sellingPrice">
    </div>

    <div class="form-group">
      <label for="quantity">Quantity</label>
      <input id="quantity" class="form-control" type="number" name="quantity">
    </div>

    <div class="form-group">
      <label for="picture">Picture</label>
      <input id="picture" class="form-control" type="file" name="picture">
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
  </form>

</div>

<script src="/form.js" type="text/javascript">  </script>
<script type="text/javascript" src="../js/thirdpartyjs/jquery.ui.widget.js"></script>
<script type="text/javascript" src="../js/thirdpartyjs/jquery.fileupload.js"></script>
<script type="text/javascript" src="../js/thirdpartyjs/jquery.cloudinary.js"></script>
